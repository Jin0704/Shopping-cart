<div class="column">
  <div class="col-md-9">
    {{#if category}}
    <form action="/admin/categories/{{category.id}}?_method=PUT" method="post">
      {{else}}
      <form action="/admin/categories" method="POST">
        {{/if}}
        <div class="form-group">
          <label for="name">分類名稱</label>
          <input type="text" class="form-control" name="name" id="name" placeholder="分類名稱" value="{{category.name}}"
            required>
        </div>
        <div class="form-group">
          <label for="status">分類狀態</label>
          <select  name="status" class="col-md-12">
            {{#if category.status}}
            <option value="1" selected>開啟</option>
            <option value="0">關閉</option>
            {{else}}
            <option value="1" selected>開啟</option>
            <option value="0" selected>關閉</option>
            {{/if}}
          </select>
          </input>
        </div>
        {{!-- <div class="form-group">
          <label for="image">Image</label>
          <input type="file" name="image" id="image" class="form-control-file">
        </div> --}}
        <div>
          <button type="submit" class="btn btn-primary" style="display: flex;justify-content:end">Submit</button>
        </div>
      </form>
  </div>

</div>