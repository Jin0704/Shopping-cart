<div class="container row">
  <div class="col-md-2 mt-2 mb-2">
    {{>adminLeft}}
  </div>
  <div class="col-md-10 mb-2">
  <a href='/admin/paymentMethods/create'>
    <button type="button" class="btn btn-primary">新增付款方式</button>
  </a>

  <br />
  <hr>
  {{>messages}}
  <table class="table table-bordered">
    <thead class="thead-dark" align="center">
      <tr>
        <th scope="col">編號</th>
        <th scope="col">名稱</th>
        <th scope="col">狀態</th>
        <th scope="col">詳細資料</th>
        <th scope="col"></th>
      </tr>
    </thead>
    <tbody align="center">
      {{#each paymentMethods}}
      <tr>
        <td>{{this.id}}</td>
        <td>{{this.name}}</td>
        {{#if this.status}}
        <td>開啟</td>
        {{else}}
        <td>關閉</td>
        {{/if}}
        <td>
          <button type="button" class="btn btn-link">
            <a href="/admin/paymentMethods/{{this.id}}">
              編輯付款方式
            </a>
          </button>
        </td>
        <td>
          <form action="/admin/paymentMethods/{{this.id}}?_method=DELETE" method="POST">
            <button type="submit" class="btn btn-link">
              <i class="fas fa-trash"></i>
            </button>
          </form>
        </td>
      </tr>
      {{/each}}
    </tbody>
  </table>
  <hr>
  </div>
</div>