<div class="row col-md-9">
  <nav class="my-2 ">
    <a class="p-2 text-dark" href="/admin/products">商品</a> |
    <a class="p-2 text-dark" href="/admin/orders">訂單</a> |
    <a class="p-2 text-dark" href="/admin/categories">分類</a>
  </nav>
</div>
<br>
<a href='/admin/products/create'>
  <button type="button" class="btn btn-primary">點我上架新產品!</button>
</a>

<br />
<br />
{{>messages}}
<table class="table">
  <thead class="thead-dark">
    <tr>
      <th scope="col">產品序號</th>
      <th scope="col">產品名稱</th>
      <th scope="col">圖片</th>
      <th scope="col">價格</th>
      <th scope="col">編輯</th>
    </tr>
  </thead>
  <tbody>
    {{#each products}}
    <tr>
      <th scope="row">{{this.id}}</th>
      <td>{{this.name}}</td>
      <td><img src="{{this.image}}" width="150" height="150"></td>
      <td>{{this.price}}</td>
      <td>
        <button type="button" class="btn btn-link">
          <a href="/admin/products/{{this.id}}">
            Show
          </a>
        </button>
        <button type="button" class="btn btn-link">
          <a href="/admin/products/{{this.id}}/edit">
            Edit
          </a>
        </button>
        <form action="/admin/products/{{this.id}}?_method=DELETE" method="POST" style="display: inline;">
          <button type="submit" class="btn btn-link">Delete</button>
        </form>
      </td>
    </tr>
    {{/each}}
  </tbody>
</table>
<nav aria-label="Page navigation example" class="d-flex justify-content-center">
  <ul class="pagination">
    <li class="page-item">
      <a class="page-link" href="/admin/products?page={{prev}}" aria-label="Previous">
        <span aria-hidden="true">&laquo;</span>
      </a>
    </li>
    {{#each totalPage}}
    {{#ifCond this ../page}}
    <li class="page-item active"><a class="page-link" href="#">{{this}}</a></li>
    {{else}}
    <li class="page-item"><a class="page-link" href="/admin/products?page={{this}}">{{this}}</a></li>
    {{/ifCond}}
    {{/each}}
    <li class="page-item"><a class="page-link" href="/admin/products?page={{next}}" aria-label="Next">
        <span aria-hidden="true">&raquo;</span>
      </a>
    </li>
  </ul>
</nav>