<div class="conatiner row">
  <div class="col-md-2 mt-2 mb-2">
    {{>adminLeft}}
  </div>
  <div class="col-md-10 mb-2">
  <hr>
  <table class="table table-bordered">
    <thead class="thead-dark" align="center">
      <tr>
        <th scope="col">功能</th>
        <th scope="col">狀態</th>
        <th scope="col">詳細內容</th>
      </tr>
    </thead>
    <tbody align="center">
      <tr>
        <td>折扣碼</td>
        {{#ifCond setting.isPromotionCode 1}}
        <td>開啟</td>
        {{else}}
        <td>關閉</td>
        {{/ifCond}}
        <td><a href="/admin/promotionCodes">點我</a></td>
      </tr>
      <tr>
        <td>積分</td>
        {{#ifCond setting.isRewardPoint 1}}
        <td><a href="#">開啟</a></td>
        {{else}}
        <td>關閉</td>
        {{/ifCond}}
        <td><a href="/admin/rewardPoints">點我</a></td>
      </tr>     
    </tbody>
  </table>
  <hr>
  </div>      
</div>