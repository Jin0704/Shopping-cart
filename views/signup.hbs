<div class="column col-md-8">
  <form action="/signup" method="POST">
    <div class="form-control">
      <label for="email">信箱:</label>
      <input type="email" name="email" id="email" placeholder="請輸入您的email">
    </div>
    <div class="form-control">
      <label for="password">密碼:</label>
      <input type="password" name="password" id="password" placeholder="請輸入您的密碼">
    </div>
    <div class="form-control">
      <label for="confirmpassword">確認密碼:</label>
      <input type="password" name="confirmpassword" id="confirmpassword" placeholder="請再次輸入您的密碼">
    </div>
    <input type="hidden" name="role" value="0">
    <button type="submit">送出</button>
  </form>
  <div class="mt-3" style="display: flex; justify-content: ;">
    <a href="/signin" class=" ml-2 text-dark"><strong>
        <p> 已經有帳號了? 點我登入</p>
      </strong></a>
  </div>
</div>